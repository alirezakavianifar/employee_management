<Window x:Class="ManagementApp.Views.ShiftGroupDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="مدیریت گروه‌های شیفت" 
        Height="600" Width="800"
        FlowDirection="RightToLeft"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
            <Button Content="افزودن گروه جدید" x:Name="AddGroupButton" Click="AddGroupButton_Click" 
                   Width="120" Height="30" Margin="0,0,10,0" Background="#4CAF50" Foreground="White"/>
            <Button Content="ویرایش گروه" x:Name="EditGroupButton" Click="EditGroupButton_Click" 
                   Width="100" Height="30" Margin="0,0,10,0" Background="#FF9800" Foreground="White"/>
            <Button Content="حذف گروه" x:Name="DeleteGroupButton" Click="DeleteGroupButton_Click" 
                   Width="100" Height="30" Background="#F44336" Foreground="White"/>
        </StackPanel>

        <!-- Group List -->
        <GroupBox Grid.Row="1" Header="لیست گروه‌های شیفت" Margin="0,0,0,20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Search Box -->
                <TextBox Grid.Row="0" x:Name="GroupSearchBox" 
                        Foreground="Gray"
                        Margin="5" 
                        TextChanged="GroupSearchBox_TextChanged"/>

                <!-- Group List -->
                <ListBox Grid.Row="1" x:Name="GroupListBox" 
                        SelectionChanged="GroupListBox_SelectionChanged"
                        Margin="5">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="5">
                                <Rectangle Width="20" Height="20" Fill="#4CAF50" Margin="0,0,10,0"/>
                                <StackPanel>
                                    <TextBlock Text="گروه شیفت" FontWeight="Bold" FontSize="14"/>
                                    <TextBlock Text="توضیحات گروه" FontSize="12" Foreground="Gray"/>
                                    <TextBlock FontSize="11" Foreground="DarkBlue">
                                        <Run Text="صبح: 15 | عصر: 15"/>
                                    </TextBlock>
                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </GroupBox>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Left">
            <Button Content="بستن" Click="CloseButton_Click" 
                   Width="80" Height="30" Margin="0,0,10,0"/>
        </StackPanel>
    </Grid>
</Window>
