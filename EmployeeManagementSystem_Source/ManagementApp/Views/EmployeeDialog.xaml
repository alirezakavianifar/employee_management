<Window x:Class="ManagementApp.Views.EmployeeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="مدیریت کارمند" 
        Height="600" Width="500"
        FlowDirection="RightToLeft"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Label Grid.Row="0" Content="نام:" FontFamily="Tahoma" FontSize="12" Margin="0,5"/>
            <TextBox Grid.Row="1" x:Name="FirstNameTextBox" FontFamily="Tahoma" FontSize="12" Margin="0,5"/>

            <Label Grid.Row="2" Content="نام خانوادگی:" FontFamily="Tahoma" FontSize="12" Margin="0,5"/>
            <TextBox Grid.Row="3" x:Name="LastNameTextBox" FontFamily="Tahoma" FontSize="12" Margin="0,5"/>

            <Label Grid.Row="4" Content="کد پرسنلی:" FontFamily="Tahoma" FontSize="12" Margin="0,5"/>
            <TextBox Grid.Row="5" x:Name="PersonnelIdTextBox" FontFamily="Tahoma" FontSize="12" Margin="0,5"/>

            <Label Grid.Row="6" Content="نقش:" FontFamily="Tahoma" FontSize="12" Margin="0,5"/>
            <ComboBox Grid.Row="7" x:Name="RoleComboBox" FontFamily="Tahoma" FontSize="12" Margin="0,5"/>

            <Label Grid.Row="8" Content="گروه شیفت:" FontFamily="Tahoma" FontSize="12" Margin="0,5"/>
            <ComboBox Grid.Row="9" x:Name="ShiftGroupComboBox" FontFamily="Tahoma" FontSize="12" Margin="0,5"/>

            <Label Grid.Row="10" Content="عکس:" FontFamily="Tahoma" FontSize="12" Margin="0,5"/>
            <StackPanel Grid.Row="11" Orientation="Horizontal" Margin="0,5">
                <Button Content="حذف عکس" x:Name="RemovePhotoButton" Click="RemovePhotoButton_Click" Margin="0,0,5,0"/>
                <Button Content="انتخاب عکس" x:Name="SelectPhotoButton" Click="SelectPhotoButton_Click" />
            </StackPanel>
            <Image Grid.Row="12" x:Name="PhotoPreview" Width="150" Height="150" Margin="0,5" Stretch="Uniform"/>

            <Label Grid.Row="13" Content="رنگ سپر:" FontFamily="Tahoma" FontSize="12" Margin="0,5"/>
            <ComboBox Grid.Row="14" x:Name="ShieldColorComboBox" FontFamily="Tahoma" FontSize="12" Margin="0,5"/>

            <CheckBox Grid.Row="15" x:Name="ShowShieldCheckBox" Content="نمایش سپر" FontFamily="Tahoma" FontSize="12" Margin="0,5"/>

            <Label Grid.Row="16" Content="استیکرها:" FontFamily="Tahoma" FontSize="12" Margin="0,5"/>
            <StackPanel Grid.Row="17" Orientation="Horizontal" Margin="0,5">
                <Button Content="افزودن استیکر" x:Name="AddStickerButton" Click="AddStickerButton_Click" Margin="0,0,5,0"/>
                <Button Content="حذف استیکر" x:Name="RemoveStickerButton" Click="RemoveStickerButton_Click" />
            </StackPanel>
            <ListBox Grid.Row="18" x:Name="StickersListBox" Height="80" Margin="0,5"/>

            <Label Grid.Row="19" Content="مدال / نشان:" FontFamily="Tahoma" FontSize="12" Margin="0,5"/>
            <StackPanel Grid.Row="20" Orientation="Horizontal" Margin="0,5">
                <Button Content="انتخاب مدال" x:Name="SelectMedalButton" Click="SelectMedalButton_Click" Margin="0,0,5,0"/>
                <Button Content="حذف مدال" x:Name="RemoveMedalButton" Click="RemoveMedalButton_Click" />
            </StackPanel>
            <TextBox Grid.Row="21" x:Name="MedalBadgePathTextBox" FontFamily="Tahoma" FontSize="12" Margin="0,5" IsReadOnly="True"/>

            <CheckBox Grid.Row="22" x:Name="IsManagerCheckBox" Content="این کارمند مدیر است" FontFamily="Tahoma" FontSize="12" Margin="0,5"/>

            <StackPanel Grid.Row="23" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,20,0,0">
                <Button Content="تأیید" x:Name="OkButton" Click="OkButton_Click" 
                       Width="80" Height="30" Margin="0,0,10,0" IsDefault="True"/>
                <Button Content="انصراف" x:Name="CancelButton" Click="CancelButton_Click" 
                       Width="80" Height="30" IsCancel="True"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Window>
