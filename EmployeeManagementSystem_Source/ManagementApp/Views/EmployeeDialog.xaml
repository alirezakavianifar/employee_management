<Window x:Class="ManagementApp.Views.EmployeeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="مدیریت کارمند" 
        Height="400" Width="400"
        FlowDirection="RightToLeft"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Content="نام:" FontFamily="Tahoma" FontSize="12" Margin="0,5"/>
        <TextBox Grid.Row="1" x:Name="FirstNameTextBox" FontFamily="Tahoma" FontSize="12" Margin="0,5"/>

        <Label Grid.Row="2" Content="نام خانوادگی:" FontFamily="Tahoma" FontSize="12" Margin="0,5"/>
        <TextBox Grid.Row="3" x:Name="LastNameTextBox" FontFamily="Tahoma" FontSize="12" Margin="0,5"/>

        <Label Grid.Row="4" Content="نقش:" FontFamily="Tahoma" FontSize="12" Margin="0,5"/>
        <ComboBox Grid.Row="5" x:Name="RoleComboBox" FontFamily="Tahoma" FontSize="12" Margin="0,5"/>

        <Label Grid.Row="6" Content="گروه شیفت:" FontFamily="Tahoma" FontSize="12" Margin="0,5"/>
        <ComboBox Grid.Row="7" x:Name="ShiftGroupComboBox" FontFamily="Tahoma" FontSize="12" Margin="0,5"/>

        <Label Grid.Row="8" Content="نقش مدیر:" FontFamily="Tahoma" FontSize="12" Margin="0,5"/>
        <CheckBox Grid.Row="9" x:Name="IsManagerCheckBox" Content="این کارمند مدیر است" FontFamily="Tahoma" FontSize="12" Margin="0,5"/>

        <StackPanel Grid.Row="10" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,20,0,0">
            <Button Content="تأیید" x:Name="OkButton" Click="OkButton_Click" 
                   Width="80" Height="30" Margin="0,0,10,0" IsDefault="True"/>
            <Button Content="انصراف" x:Name="CancelButton" Click="CancelButton_Click" 
                   Width="80" Height="30" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
