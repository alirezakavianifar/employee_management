<Window x:Class="DisplayApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        xmlns:converters="clr-namespace:DisplayApp.Converters"
        Title="{converters:Res display_window_title}" Height="800" Width="1200"
        WindowState="Maximized" WindowStyle="None"
        Background="#1a1a1a" FlowDirection="LeftToRight">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#2d2d2d" Padding="20,15,10,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" Text="{converters:Res display_app_title}" 
                          Style="{StaticResource TitleTextStyle}" 
                          HorizontalAlignment="Left"/>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="20,0">
                    <!-- Language selection hidden as per user request, but kept for future use -->
                    <StackPanel Orientation="Horizontal" Visibility="Collapsed">
                        <TextBlock Text="{converters:Res label_language}" Style="{StaticResource BodyTextStyle}" VerticalAlignment="Center" Margin="5,0"/>
                        <ComboBox x:Name="LanguageComboBox" Width="120" Margin="5,0" 
                                  Style="{StaticResource DarkComboBoxStyle}"
                                  ItemContainerStyle="{StaticResource DarkComboBoxItemStyle}"
                                  SelectionChanged="LanguageComboBox_SelectionChanged">
                            <ComboBoxItem x:Name="LanguageEnglishItem" Content="{converters:Res language_english}" Tag="en"/>
                            <ComboBoxItem x:Name="LanguagePersianItem" Content="{converters:Res language_persian}" Tag="fa"/>
                        </ComboBox>
                    </StackPanel>
                    <Button x:Name="ExitFullscreenButton" Content="{converters:Res btn_exit_fullscreen}" 
                           Style="{StaticResource SecondaryButtonStyle}"
                           Click="ExitFullscreenButton_Click" Margin="5"/>
                    <Button x:Name="CloseButton" Content="{converters:Res btn_close}" 
                           Style="{StaticResource DangerButtonStyle}"
                           Click="CloseButton_Click" Margin="5"/>
                </StackPanel>
                
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <TextBlock x:Name="LastUpdateText" Text="{converters:Res display_last_update_label}" 
                              Style="{StaticResource BodyTextStyle}" Margin="10,0"/>
                    <TextBlock x:Name="CountdownText" Text="{converters:Res display_next_update_label}" 
                              Style="{StaticResource BodyTextStyle}" Margin="10,0"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
             <!-- Managers Section -->
             <Border Grid.Row="0" Style="{StaticResource MainPanelStyle}" Margin="0,0,0,5">
                 <StackPanel>
                     <TextBlock Text="Managers" Style="{StaticResource SubtitleTextStyle}" Margin="0,0,0,2"/>
                     <ScrollViewer Height="80" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                         <Grid x:Name="ManagersGrid">
                             <Grid.ColumnDefinitions>
                                 <ColumnDefinition Width="*"/>
                                 <ColumnDefinition Width="*"/>
                                 <ColumnDefinition Width="*"/>
                                 <ColumnDefinition Width="*"/>
                                 <ColumnDefinition Width="*"/>
                                 <ColumnDefinition Width="*"/>
                                 <ColumnDefinition Width="*"/>
                                 <ColumnDefinition Width="*"/>
                             </Grid.ColumnDefinitions>
                         </Grid>
                     </ScrollViewer>
                 </StackPanel>
             </Border>
            
            <!-- Shifts Section -->
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                
                <!-- Groups Container -->
                <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <Border Style="{StaticResource MainPanelStyle}" Margin="2">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Header -->
                            <Border Grid.Row="0" Background="#2d2d2d" Padding="5,2" CornerRadius="3">
                                <TextBlock Text="{converters:Res header_work_groups}" Style="{StaticResource SubtitleTextStyle}" 
                                           HorizontalAlignment="Center" FontWeight="Bold"/>
                            </Border>
                            
                            <!-- Groups Display Container -->
                            <WrapPanel Grid.Row="1" x:Name="GroupsContainer" Margin="2" Orientation="Horizontal" HorizontalAlignment="Center"/>
                        </Grid>
                    </Border>
                </ScrollViewer>
                
                <!-- Bottom Section -->
                <Grid Grid.Row="1" Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Chart with AI Recommendation -->
                <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,5,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Chart Title -->
                        <TextBlock Grid.Row="0" x:Name="ChartTitle" Text="{converters:Res header_performance_chart}" Style="{StaticResource SubtitleTextStyle}"/>
                        
                        <!-- AI Recommendation -->
                        <TextBlock Grid.Row="1" x:Name="AIRecommendationTitle" Text="{converters:Res header_ai_recommendation}" Style="{StaticResource SubtitleTextStyle}" Margin="0,10,0,5"/>
                        <TextBlock Grid.Row="1" x:Name="AIRecommendation" Text="{converters:Res display_loading}" 
                                  Style="{StaticResource BodyTextStyle}" TextWrapping="Wrap" Margin="0,25,0,0"/>
                        
                        <!-- Chart -->
                        <lvc:CartesianChart Grid.Row="2" x:Name="PerformanceChart" Series="{Binding SeriesCollection}" 
                                           Height="100" Margin="0,10,0,0">
                            <lvc:CartesianChart.AxisX>
                                <lvc:Axis Labels="{Binding Labels}"/>
                            </lvc:CartesianChart.AxisX>
                        </lvc:CartesianChart>
                        
                        <!-- Chart Explanation -->
                        <TextBlock Grid.Row="2" x:Name="ChartFormulaText" Text="{converters:Res display_chart_formula_short}" 
                                   Style="{StaticResource BodyTextStyle}" FontSize="9" Foreground="#888" 
                                   TextWrapping="Wrap" Margin="0,110,0,0" HorizontalAlignment="Center"/>
                    </Grid>
                </Border>
                
                <!-- Absence Section with Categories -->
                <Border Grid.Column="1" Grid.ColumnSpan="2" Style="{StaticResource CardStyle}" Margin="3,0,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Leave Section -->
                        <Border Grid.Column="0" BorderBrush="#3498db" BorderThickness="2" CornerRadius="5" Padding="5" Margin="3">
                            <StackPanel>
                                <!-- Category Header -->
                                <TextBlock Text="{converters:Res category_on_leave}" Style="{StaticResource SubtitleTextStyle}" 
                                          Foreground="#3498db" HorizontalAlignment="Center" FontSize="14" FontWeight="Bold"/>
                                <TextBlock x:Name="LeaveCount" Text="0" Style="{StaticResource CountTextStyle}" 
                                          Foreground="#3498db" HorizontalAlignment="Center" FontSize="20" Margin="0,5,0,10"/>
                                
                                <!-- Employee Photos -->
                                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" MaxHeight="120">
                                    <ItemsControl x:Name="LeavePanel">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                    </ItemsControl>
                                </ScrollViewer>
                            </StackPanel>
                        </Border>
                        
                        <!-- Sick Section -->
                        <Border Grid.Column="1" BorderBrush="#e74c3c" BorderThickness="2" CornerRadius="5" Padding="5" Margin="3">
                            <StackPanel>
                                <!-- Category Header -->
                                <TextBlock Text="{converters:Res category_sick}" Style="{StaticResource SubtitleTextStyle}" 
                                          Foreground="#e74c3c" HorizontalAlignment="Center" FontSize="14" FontWeight="Bold"/>
                                <TextBlock x:Name="SickCount" Text="0" Style="{StaticResource CountTextStyle}" 
                                          Foreground="#e74c3c" HorizontalAlignment="Center" FontSize="20" Margin="0,5,0,10"/>
                                
                                <!-- Employee Photos -->
                                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" MaxHeight="120">
                                    <ItemsControl x:Name="SickPanel">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                    </ItemsControl>
                                </ScrollViewer>
                            </StackPanel>
                        </Border>
                        
                        <!-- Absent Section -->
                        <Border Grid.Column="2" BorderBrush="#f1c40f" BorderThickness="2" CornerRadius="5" Padding="5" Margin="3">
                            <StackPanel>
                                <!-- Category Header -->
                                <TextBlock Text="{converters:Res category_absent}" Style="{StaticResource SubtitleTextStyle}" 
                                          Foreground="#f1c40f" HorizontalAlignment="Center" FontSize="14" FontWeight="Bold"/>
                                <TextBlock x:Name="AbsentCount" Text="0" Style="{StaticResource CountTextStyle}" 
                                          Foreground="#f1c40f" HorizontalAlignment="Center" FontSize="20" Margin="0,5,0,10"/>
                                
                                <!-- Employee Photos -->
                                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" MaxHeight="120">
                                    <ItemsControl x:Name="AbsentPanel">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                    </ItemsControl>
                                </ScrollViewer>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>
