<UserControl x:Class="ManagementApp.Controls.LabelCreationPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:ManagementApp.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="250">
    <UserControl.Resources>
        <!-- Label Item Style -->
        <Style x:Key="LabelItemStyle" TargetType="Border">
            <Setter Property="Background" Value="#E3F2FD"/>
            <Setter Property="BorderBrush" Value="#90CAF9"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="3"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#BBDEFB"/>
                    <Setter Property="BorderBrush" Value="#64B5F6"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    
    <Border BorderBrush="#E0E0E0" BorderThickness="1" Background="#FAFAFA" CornerRadius="5">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <TextBlock Grid.Row="0" Text="{converters:Res header_employee_labels}" FontWeight="Bold" FontSize="14" 
                       Foreground="#1976D2" Margin="0,0,0,10"/>

            <!-- Create Label Section -->
            <GroupBox Grid.Row="1" Header="{converters:Res header_create_new_label}" Margin="0,0,0,10" Padding="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBox Grid.Row="0" x:Name="LabelTextInput" 
                             Text="" 
                             Height="28"
                             Padding="5,3"
                             Margin="0,0,0,8"
                             VerticalContentAlignment="Center"
                             KeyDown="LabelTextInput_KeyDown"/>
                    
                    <Button Grid.Row="1" x:Name="CreateLabelButton" 
                            Content="{converters:Res btn_create_label}" 
                            Click="CreateLabelButton_Click"
                            Height="28"
                            Background="#4CAF50" 
                            Foreground="White"
                            FontWeight="SemiBold"
                            Cursor="Hand"/>
                </Grid>
            </GroupBox>

            <!-- Label Archive Section - drop zone to remove label from employee -->
            <GroupBox Grid.Row="2" x:Name="LabelArchiveGroupBox" Header="{converters:Res header_label_archive}" Padding="5"
                      AllowDrop="True" DragOver="LabelArchive_DragOver" Drop="LabelArchive_Drop">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Search Box -->
                    <TextBox Grid.Row="0" x:Name="SearchBox" 
                             Text="" 
                             Height="26"
                             Padding="5,3"
                             Margin="0,0,0,8"
                             VerticalContentAlignment="Center"
                             TextChanged="SearchBox_TextChanged"/>
                    
                    <!-- Label List -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="LabelArchiveList">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource LabelItemStyle}"
                                            MouseMove="LabelItem_MouseMove"
                                            MouseLeftButtonDown="LabelItem_MouseLeftButtonDown"
                                            Tag="{Binding LabelId}">
                                        <Border.ContextMenu>
                                            <ContextMenu>
                                                <MenuItem Header="{converters:Res menu_delete_from_archive}" Click="DeleteFromArchive_Click"
                                                          Tag="{Binding LabelId}"/>
                                            </ContextMenu>
                                        </Border.ContextMenu>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" 
                                                       Text="{Binding Text}" 
                                                       FontSize="12"
                                                       TextTrimming="CharacterEllipsis"
                                                       VerticalAlignment="Center"/>
                                            <TextBlock Grid.Column="1" 
                                                       Text="â‹®" 
                                                       FontSize="14"
                                                       Foreground="#9E9E9E"
                                                       VerticalAlignment="Center"
                                                       Margin="5,0,0,0"
                                                       ToolTip="{converters:Res tooltip_drag_to_employee}"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                    
                    <!-- Empty State -->
                    <TextBlock Grid.Row="1" x:Name="EmptyStateText"
                               Text="{converters:Res label_archive_empty}"
                               FontStyle="Italic"
                               Foreground="#9E9E9E"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Visibility="Collapsed"/>
                </Grid>
            </GroupBox>
        </Grid>
    </Border>
</UserControl>
