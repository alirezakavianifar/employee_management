<Window x:Class="ManagementApp.Views.PasswordDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin Access" Height="180" Width="350" 
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize" WindowStyle="ToolWindow">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Text="Please enter admin password to access settings:" Margin="0,0,0,10"/>
        
        <PasswordBox x:Name="AdminPasswordBox" Grid.Row="1" Height="25" Margin="0,0,0,20" KeyDown="AdminPasswordBox_KeyDown"/>
        
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Width="75" Margin="0,0,10,0" IsDefault="True" Click="OK_Click"/>
            <Button Content="Cancel" Width="75" IsCancel="True" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
