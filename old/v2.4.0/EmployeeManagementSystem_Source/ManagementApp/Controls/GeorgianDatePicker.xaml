<UserControl x:Class="ManagementApp.Controls.GeorgianDatePicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="200">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        
        <TextBox x:Name="DateTextBox" 
                 Grid.Column="0"
                 Text="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=SelectedDate, Mode=TwoWay}"
                 FontFamily="Tahoma"
                 FontSize="12"
                 Padding="5,2"
                 VerticalContentAlignment="Center"
                 IsReadOnly="True"
                 Background="White"
                 BorderBrush="#CCCCCC"
                 BorderThickness="1"/>
        
        <Button x:Name="CalendarButton" 
                Grid.Column="1"
                Content="ðŸ“…"
                Width="30"
                Height="30"
                Margin="2,0,0,0"
                Click="CalendarButton_Click"
                Background="#F0F0F0"
                BorderBrush="#CCCCCC"
                BorderThickness="1"
                FontSize="14"/>
    </Grid>
</UserControl>
