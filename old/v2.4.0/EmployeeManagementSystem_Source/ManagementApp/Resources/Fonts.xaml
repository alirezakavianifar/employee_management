<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">
    
    <!-- Persian/Arabic compatible fonts -->
    <FontFamily x:Key="PersianFontFamily">Tahoma</FontFamily>
    <FontFamily x:Key="EnglishFontFamily">Segoe UI</FontFamily>
    
    <!-- Font sizes -->
    <sys:Double x:Key="SmallFontSize">10</sys:Double>
    <sys:Double x:Key="NormalFontSize">12</sys:Double>
    <sys:Double x:Key="MediumFontSize">14</sys:Double>
    <sys:Double x:Key="LargeFontSize">16</sys:Double>
    <sys:Double x:Key="XLargeFontSize">18</sys:Double>
    
    <!-- Typography -->
    <Style x:Key="PersianTextBlock" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource PersianFontFamily}"/>
        <Setter Property="FontSize" Value="{StaticResource NormalFontSize}"/>
        <Setter Property="FlowDirection" Value="RightToLeft"/>
    </Style>
    
    <Style x:Key="PersianLabel" TargetType="Label">
        <Setter Property="FontFamily" Value="{StaticResource PersianFontFamily}"/>
        <Setter Property="FontSize" Value="{StaticResource NormalFontSize}"/>
        <Setter Property="FlowDirection" Value="RightToLeft"/>
    </Style>
    
    <Style x:Key="PersianButton" TargetType="Button">
        <Setter Property="FontFamily" Value="{StaticResource PersianFontFamily}"/>
        <Setter Property="FontSize" Value="{StaticResource NormalFontSize}"/>
        <Setter Property="FlowDirection" Value="RightToLeft"/>
        <Setter Property="Padding" Value="10,5"/>
        <Setter Property="Margin" Value="5"/>
    </Style>

</ResourceDictionary>
