<Window x:Class="ManagementApp.Views.ShiftGroupEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add New Shift Group" Height="650" Width="520"
        MinHeight="600" MinWidth="480"
        FlowDirection="LeftToRight"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Group Name -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <Label Content="Group name:" FontWeight="Bold"/>
            <TextBox x:Name="NameTextBox" Height="25"/>
        </StackPanel>

        <!-- Description -->
        <StackPanel Grid.Row="1" Margin="0,0,0,15">
            <Label Content="Description:" FontWeight="Bold"/>
            <TextBox x:Name="DescriptionTextBox" Height="60" TextWrapping="Wrap" AcceptsReturn="True"/>
        </StackPanel>

        <!-- Color -->
        <StackPanel Grid.Row="2" Margin="0,0,0,15">
            <Label Content="Group color:" FontWeight="Bold"/>
            <Button x:Name="ColorPickerButton" Height="30" Click="ColorPickerButton_Click" HorizontalContentAlignment="Stretch">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Border x:Name="ColorPreviewBorder" Grid.Column="0" Width="40" Height="25" 
                            BorderBrush="Gray" BorderThickness="1" Margin="5,0,10,0" 
                            Background="#4CAF50"/>
                    <TextBlock x:Name="ColorHexTextBlock" Grid.Column="1" Text="#4CAF50" 
                               VerticalAlignment="Center" HorizontalAlignment="Right" 
                               Margin="0,0,10,0"/>
                </Grid>
            </Button>
        </StackPanel>

        <!-- Capacity -->
        <StackPanel Grid.Row="3" Margin="0,0,0,15">
            <Label Content="Shift capacities:" FontWeight="Bold"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Margin="0,0,5,0">
                    <Label Content="Morning:" FontSize="10"/>
                    <TextBox x:Name="MorningCapacityTextBox" Text="15" Height="25" PreviewTextInput="NumberValidationTextBox"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Margin="5,0,5,0">
                    <Label Content="Afternoon:" FontSize="10"/>
                    <TextBox x:Name="AfternoonCapacityTextBox" Text="15" Height="25" PreviewTextInput="NumberValidationTextBox"/>
                </StackPanel>
                <StackPanel Grid.Column="2" Margin="5,0,0,0">
                    <Label Content="Night:" FontSize="10"/>
                    <TextBox x:Name="NightCapacityTextBox" Text="15" Height="25" PreviewTextInput="NumberValidationTextBox"/>
                </StackPanel>
            </Grid>
        </StackPanel>

        <!-- Foreman Selection -->
        <StackPanel Grid.Row="4" Margin="0,0,0,15">
            <Label Content="Shift supervisors:" FontWeight="Bold" Margin="0,0,0,10"/>
            
            <!-- Morning Shift Foreman -->
            <StackPanel Margin="0,0,0,10">
                <Label Content="Morning shift supervisor:" FontSize="12"/>
                <ComboBox x:Name="MorningForemanComboBox" Height="25">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding FullName}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </StackPanel>
            
            <!-- Afternoon Shift Foreman -->
            <StackPanel Margin="0,0,0,10">
                <Label Content="Afternoon shift supervisor:" FontSize="12"/>
                <ComboBox x:Name="AfternoonForemanComboBox" Height="25">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding FullName}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </StackPanel>
            
            <!-- Night Shift Foreman -->
            <StackPanel>
                <Label Content="Night shift supervisor:" FontSize="12"/>
                <ComboBox x:Name="NightForemanComboBox" Height="25">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding FullName}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </StackPanel>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button x:Name="OkButton" Content="OK" Width="80" Height="30" Margin="0,0,10,0" Click="OkButton_Click" IsDefault="True"/>
            <Button x:Name="CancelButton" Content="Cancel" Width="80" Height="30" Click="CancelButton_Click" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>