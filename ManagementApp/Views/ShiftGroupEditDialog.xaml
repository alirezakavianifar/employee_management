<Window x:Class="ManagementApp.Views.ShiftGroupEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add New Shift Group" Height="750" Width="580"
        MinHeight="600" MinWidth="500"
        FlowDirection="LeftToRight"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" Padding="0,0,10,0">
            <StackPanel>
                <!-- Group Name -->
                <StackPanel Margin="0,0,0,15">
                    <Label Content="Group name:" FontWeight="Bold"/>
                    <TextBox x:Name="NameTextBox" Height="30" VerticalContentAlignment="Center"/>
                </StackPanel>

                <!-- Description -->
                <StackPanel Margin="0,0,0,15">
                    <Label Content="Description:" FontWeight="Bold"/>
                    <TextBox x:Name="DescriptionTextBox" Height="80" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
                </StackPanel>

                <!-- Color -->
                <StackPanel Margin="0,0,0,15">
                    <Label Content="Group color:" FontWeight="Bold"/>
                    <Button x:Name="ColorPickerButton" Height="35" Click="ColorPickerButton_Click" HorizontalContentAlignment="Stretch">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Border x:Name="ColorPreviewBorder" Grid.Column="0" Width="45" Height="25" 
                                    BorderBrush="Gray" BorderThickness="1" Margin="5,0,10,0" 
                                    Background="#4CAF50"/>
                            <TextBlock x:Name="ColorHexTextBlock" Grid.Column="1" Text="#4CAF50" 
                                       VerticalAlignment="Center" HorizontalAlignment="Right" 
                                       Margin="0,0,10,0"/>
                        </Grid>
                    </Button>
                </StackPanel>

                <!-- Capacity -->
                <StackPanel Margin="0,0,0,15">
                    <Label Content="Shift capacities:" FontWeight="Bold"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Margin="0,0,5,0">
                            <Label Content="Morning:" FontSize="11"/>
                            <TextBox x:Name="MorningCapacityTextBox" Text="15" Height="30" VerticalContentAlignment="Center" PreviewTextInput="NumberValidationTextBox"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1" Margin="5,0,5,0">
                            <Label Content="Afternoon:" FontSize="11"/>
                            <TextBox x:Name="AfternoonCapacityTextBox" Text="15" Height="30" VerticalContentAlignment="Center" PreviewTextInput="NumberValidationTextBox"/>
                        </StackPanel>
                        <StackPanel Grid.Column="2" Margin="5,0,0,0">
                            <Label Content="Night:" FontSize="11"/>
                            <TextBox x:Name="NightCapacityTextBox" Text="15" Height="30" VerticalContentAlignment="Center" PreviewTextInput="NumberValidationTextBox"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>

                <!-- Foreman Selection -->
                <StackPanel Margin="0,0,0,15">
                    <Label Content="Shift supervisors:" FontWeight="Bold" Margin="0,0,0,10"/>
                    
                    <!-- Morning Shift Foreman -->
                    <StackPanel Margin="0,0,0,12">
                        <Label Content="Morning shift supervisor:" FontSize="12"/>
                        <ComboBox x:Name="MorningForemanComboBox" Height="32" VerticalContentAlignment="Center">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding FullName}" VerticalAlignment="Center"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>
                    
                    <!-- Afternoon Shift Foreman -->
                    <StackPanel Margin="0,0,0,12">
                        <Label Content="Afternoon shift supervisor:" FontSize="12"/>
                        <ComboBox x:Name="AfternoonForemanComboBox" Height="32" VerticalContentAlignment="Center">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding FullName}" VerticalAlignment="Center"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>
                    
                    <!-- Night Shift Foreman -->
                    <StackPanel Margin="0,0,0,10">
                        <Label Content="Night shift supervisor:" FontSize="12"/>
                        <ComboBox x:Name="NightForemanComboBox" Height="32" VerticalContentAlignment="Center">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding FullName}" VerticalAlignment="Center"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button x:Name="OkButton" Content="OK" Width="100" Height="35" Margin="0,0,10,0" Click="OkButton_Click" IsDefault="True"/>
            <Button x:Name="CancelButton" Content="Cancel" Width="100" Height="35" Click="CancelButton_Click" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>