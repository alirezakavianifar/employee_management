<Window x:Class="ManagementApp.Views.ColorPalettePopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select color" Height="350" Width="400"
        MinHeight="300" MinWidth="350"
        FlowDirection="LeftToRight"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <Label Grid.Row="0" Content="Select a color:" FontWeight="Bold" FontSize="14" Margin="0,0,0,15"/>

        <!-- Color Palette Grid -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <UniformGrid x:Name="ColorGrid" Columns="5" Rows="0" Margin="0,0,0,15">
                <!-- Row 1 -->
                <Button x:Name="ColorGreen" Tag="#4CAF50" Click="ColorButton_Click" Margin="5" 
                        ToolTip="Green (#4CAF50)">
                    <Border Width="50" Height="50" Background="#4CAF50" BorderBrush="Gray" BorderThickness="2" CornerRadius="3"/>
                </Button>
                <Button x:Name="ColorBlue" Tag="#2196F3" Click="ColorButton_Click" Margin="5"
                        ToolTip="Blue (#2196F3)">
                    <Border Width="50" Height="50" Background="#2196F3" BorderBrush="Gray" BorderThickness="2" CornerRadius="3"/>
                </Button>
                <Button x:Name="ColorOrange" Tag="#FF9800" Click="ColorButton_Click" Margin="5"
                        ToolTip="Orange (#FF9800)">
                    <Border Width="50" Height="50" Background="#FF9800" BorderBrush="Gray" BorderThickness="2" CornerRadius="3"/>
                </Button>
                <Button x:Name="ColorRed" Tag="#F44336" Click="ColorButton_Click" Margin="5"
                        ToolTip="Red (#F44336)">
                    <Border Width="50" Height="50" Background="#F44336" BorderBrush="Gray" BorderThickness="2" CornerRadius="3"/>
                </Button>
                <Button x:Name="ColorPurple" Tag="#9C27B0" Click="ColorButton_Click" Margin="5"
                        ToolTip="Purple (#9C27B0)">
                    <Border Width="50" Height="50" Background="#9C27B0" BorderBrush="Gray" BorderThickness="2" CornerRadius="3"/>
                </Button>

                <!-- Row 2 -->
                <Button x:Name="ColorDarkBlue" Tag="#3F51B5" Click="ColorButton_Click" Margin="5"
                        ToolTip="Dark blue (#3F51B5)">
                    <Border Width="50" Height="50" Background="#3F51B5" BorderBrush="Gray" BorderThickness="2" CornerRadius="3"/>
                </Button>
                <Button x:Name="ColorDarkGreen" Tag="#388E3C" Click="ColorButton_Click" Margin="5"
                        ToolTip="Dark green (#388E3C)">
                    <Border Width="50" Height="50" Background="#388E3C" BorderBrush="Gray" BorderThickness="2" CornerRadius="3"/>
                </Button>
                <Button x:Name="ColorDarkRed" Tag="#D32F2F" Click="ColorButton_Click" Margin="5"
                        ToolTip="Dark red (#D32F2F)">
                    <Border Width="50" Height="50" Background="#D32F2F" BorderBrush="Gray" BorderThickness="2" CornerRadius="3"/>
                </Button>
                <Button x:Name="ColorTeal" Tag="#009688" Click="ColorButton_Click" Margin="5"
                        ToolTip="Teal (#009688)">
                    <Border Width="50" Height="50" Background="#009688" BorderBrush="Gray" BorderThickness="2" CornerRadius="3"/>
                </Button>
                <Button x:Name="ColorPink" Tag="#E91E63" Click="ColorButton_Click" Margin="5"
                        ToolTip="Pink (#E91E63)">
                    <Border Width="50" Height="50" Background="#E91E63" BorderBrush="Gray" BorderThickness="2" CornerRadius="3"/>
                </Button>

                <!-- Row 3 -->
                <Button x:Name="ColorIndigo" Tag="#673AB7" Click="ColorButton_Click" Margin="5"
                        ToolTip="Indigo (#673AB7)">
                    <Border Width="50" Height="50" Background="#673AB7" BorderBrush="Gray" BorderThickness="2" CornerRadius="3"/>
                </Button>
                <Button x:Name="ColorCyan" Tag="#00BCD4" Click="ColorButton_Click" Margin="5"
                        ToolTip="Cyan (#00BCD4)">
                    <Border Width="50" Height="50" Background="#00BCD4" BorderBrush="Gray" BorderThickness="2" CornerRadius="3"/>
                </Button>
                <Button x:Name="ColorAmber" Tag="#FFC107" Click="ColorButton_Click" Margin="5"
                        ToolTip="Amber (#FFC107)">
                    <Border Width="50" Height="50" Background="#FFC107" BorderBrush="Gray" BorderThickness="2" CornerRadius="3"/>
                </Button>
                <Button x:Name="ColorBrown" Tag="#795548" Click="ColorButton_Click" Margin="5"
                        ToolTip="Brown (#795548)">
                    <Border Width="50" Height="50" Background="#795548" BorderBrush="Gray" BorderThickness="2" CornerRadius="3"/>
                </Button>
                <Button x:Name="ColorGrey" Tag="#607D8B" Click="ColorButton_Click" Margin="5"
                        ToolTip="Gray (#607D8B)">
                    <Border Width="50" Height="50" Background="#607D8B" BorderBrush="Gray" BorderThickness="2" CornerRadius="3"/>
                </Button>
            </UniformGrid>
        </ScrollViewer>

        <!-- Preview Area -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,15" HorizontalAlignment="Center">
            <Label Content="Selected color:" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <Border x:Name="ColorPreviewBorder" Width="60" Height="40" 
                    BorderBrush="Black" BorderThickness="2" 
                    Background="#4CAF50" Margin="0,0,10,0"/>
            <TextBlock x:Name="ColorHexTextBlock" Text="#4CAF50" 
                       VerticalAlignment="Center" FontSize="12" FontWeight="Bold"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="OkButton" Content="OK" Width="80" Height="30" Margin="0,0,10,0" 
                    Click="OkButton_Click" IsDefault="True"/>
            <Button x:Name="CancelButton" Content="Cancel" Width="80" Height="30" 
                    Click="CancelButton_Click" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>

