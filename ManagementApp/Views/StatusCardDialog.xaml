<Window x:Class="ManagementApp.Views.StatusCardDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Status Card Management" 
        Height="500" Width="600"
        FlowDirection="LeftToRight"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
            <Button Content="Add Card" x:Name="AddCardButton" Click="AddCardButton_Click" 
                   Width="120" Height="30" Margin="0,0,10,0" Background="#4CAF50" Foreground="White"/>
            <Button Content="Edit Card" x:Name="EditCardButton" Click="EditCardButton_Click" 
                   Width="100" Height="30" Margin="0,0,10,0" Background="#FF9800" Foreground="White"/>
            <Button Content="Delete Card" x:Name="DeleteCardButton" Click="DeleteCardButton_Click" 
                   Width="100" Height="30" Background="#F44336" Foreground="White"/>
        </StackPanel>

        <!-- Card List -->
        <GroupBox Grid.Row="1" Header="Status card list" Margin="0,0,0,20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Search Box -->
                <TextBox Grid.Row="0" x:Name="CardSearchBox" 
                        Text="Search cards..." 
                        Foreground="Gray"
                        Margin="5" 
                        TextChanged="CardSearchBox_TextChanged"
                        GotFocus="CardSearchBox_GotFocus"
                        LostFocus="CardSearchBox_LostFocus"/>

                <!-- Card List -->
                <ListBox Grid.Row="1" x:Name="CardListBox" 
                        SelectionChanged="CardListBox_SelectionChanged"
                        Margin="5">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="5">
                                <Border Width="80" Height="30" 
                                       Background="{Binding Color}" 
                                       CornerRadius="5" 
                                       Margin="0,0,10,0"
                                       Padding="5,0">
                                    <TextBlock Text="{Binding Name}" 
                                              Foreground="{Binding TextColor}" 
                                              FontWeight="Bold" 
                                              FontSize="11"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Center"/>
                                </Border>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="14"/>
                                    <TextBlock Text="{Binding StatusCardId}" FontSize="10" Foreground="Gray"/>
                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </GroupBox>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Left">
            <Button Content="Close" x:Name="CloseButton" Click="CloseButton_Click" 
                   Width="80" Height="30" IsDefault="True"/>
        </StackPanel>
    </Grid>
</Window>
