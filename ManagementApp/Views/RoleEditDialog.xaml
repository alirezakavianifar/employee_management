<Window x:Class="ManagementApp.Views.RoleEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ویرایش نقش" 
        Height="400" Width="400"
        FlowDirection="RightToLeft"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Content="شناسه نقش:" FontFamily="Tahoma" FontSize="12" Margin="0,5"/>
        <TextBox Grid.Row="1" x:Name="RoleIdTextBox" FontFamily="Tahoma" FontSize="12" Margin="0,5"/>

        <Label Grid.Row="2" Content="نام نقش:" FontFamily="Tahoma" FontSize="12" Margin="0,5"/>
        <TextBox Grid.Row="3" x:Name="RoleNameTextBox" FontFamily="Tahoma" FontSize="12" Margin="0,5"/>

        <Label Grid.Row="4" Content="توضیحات:" FontFamily="Tahoma" FontSize="12" Margin="0,5"/>
        <TextBox Grid.Row="5" x:Name="DescriptionTextBox" FontFamily="Tahoma" FontSize="12" 
                Height="60" TextWrapping="Wrap" AcceptsReturn="True" Margin="0,5"/>

        <StackPanel Grid.Row="6" Orientation="Horizontal" Margin="0,20,0,0">
            <Label Content="رنگ:" FontFamily="Tahoma" FontSize="12" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <ComboBox x:Name="ColorComboBox" Width="100" Height="25" Margin="0,0,10,0">
                <ComboBoxItem Content="سبز" Tag="#4CAF50" IsSelected="True"/>
                <ComboBoxItem Content="آبی" Tag="#2196F3"/>
                <ComboBoxItem Content="نارنجی" Tag="#FF9800"/>
                <ComboBoxItem Content="قرمز" Tag="#F44336"/>
                <ComboBoxItem Content="بنفش" Tag="#9C27B0"/>
                <ComboBoxItem Content="آبی تیره" Tag="#3F51B5"/>
                <ComboBoxItem Content="سبز تیره" Tag="#388E3C"/>
                <ComboBoxItem Content="قرمز تیره" Tag="#D32F2F"/>
            </ComboBox>
            <Border x:Name="ColorPreview" Width="30" Height="25" Background="#4CAF50" BorderBrush="Black" BorderThickness="1"/>
        </StackPanel>

        <StackPanel Grid.Row="7" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,20,0,0">
            <Label Content="اولویت:" FontFamily="Tahoma" FontSize="12" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox x:Name="PriorityTextBox" Width="60" Height="25" Text="50" FontFamily="Tahoma" FontSize="12"/>
            <TextBlock Text="(بالاتر = مهم‌تر)" FontFamily="Tahoma" FontSize="10" Foreground="Gray" VerticalAlignment="Center" Margin="5,0,0,0"/>
        </StackPanel>

        <StackPanel Grid.Row="8" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,20,0,0">
            <Button Content="تأیید" x:Name="OkButton" Click="OkButton_Click" 
                   Width="80" Height="30" Margin="0,0,10,0" IsDefault="True"/>
            <Button Content="انصراف" x:Name="CancelButton" Click="CancelButton_Click" 
                   Width="80" Height="30" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
