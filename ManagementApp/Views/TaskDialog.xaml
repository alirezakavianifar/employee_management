<Window x:Class="ManagementApp.Views.TaskDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:ManagementApp.Controls"
        Title="مدیریت وظیفه" 
        Height="500" Width="500"
        FlowDirection="RightToLeft"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Content="عنوان:" FontFamily="Tahoma" FontSize="12" Margin="0,5"/>
        <TextBox Grid.Row="1" x:Name="TitleTextBox" FontFamily="Tahoma" FontSize="12" Margin="0,5"/>

        <Label Grid.Row="2" Content="توضیحات:" FontFamily="Tahoma" FontSize="12" Margin="0,5"/>
        <TextBox Grid.Row="3" x:Name="DescriptionTextBox" Height="80" FontFamily="Tahoma" FontSize="12" 
                 TextWrapping="Wrap" AcceptsReturn="True" Margin="0,5"/>

        <Label Grid.Row="4" Content="اولویت:" FontFamily="Tahoma" FontSize="12" Margin="0,5"/>
        <ComboBox Grid.Row="5" x:Name="PriorityComboBox" FontFamily="Tahoma" FontSize="12" Margin="0,5">
            <ComboBoxItem Content="کم"/>
            <ComboBoxItem Content="متوسط" IsSelected="True"/>
            <ComboBoxItem Content="زیاد"/>
            <ComboBoxItem Content="فوری"/>
        </ComboBox>

        <Label Grid.Row="6" Content="ساعت تخمینی:" FontFamily="Tahoma" FontSize="12" Margin="0,5"/>
        <TextBox Grid.Row="7" x:Name="EstimatedHoursTextBox" Text="1.0" FontFamily="Tahoma" FontSize="12" Margin="0,5"/>

        <Label Grid.Row="8" Content="تاریخ هدف:" FontFamily="Tahoma" FontSize="12" Margin="0,5"/>
        <controls:ShamsiDatePicker Grid.Row="9" x:Name="TargetDatePicker" Margin="0,5"/>

        <StackPanel Grid.Row="10" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,20,0,0">
            <Button Content="تأیید" x:Name="OkButton" Click="OkButton_Click" 
                   Width="80" Height="30" Margin="0,0,10,0" IsDefault="True"/>
            <Button Content="انصراف" x:Name="CancelButton" Click="CancelButton_Click" 
                   Width="80" Height="30" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
