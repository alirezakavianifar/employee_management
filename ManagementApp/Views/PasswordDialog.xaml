<Window x:Class="ManagementApp.Views.PasswordDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login"
        Width="380" SizeToContent="Height"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        MouseDown="Window_MouseDown">

    <Window.Resources>
        <!-- Button style -->
        <Style x:Key="LoginButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="36"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd" CornerRadius="6"
                                Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.85"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.7"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- PasswordBox style -->
        <Style x:Key="ElegantPasswordBox" TargetType="PasswordBox">
            <Setter Property="Height" Value="38"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#ECEFF4"/>
            <Setter Property="CaretBrush" Value="#81A1C1"/>
            <Setter Property="BorderThickness" Value="0,0,0,2"/>
            <Setter Property="BorderBrush" Value="#4C566A"/>
            <Setter Property="Background" Value="#3B4252"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border x:Name="Bd" CornerRadius="6"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                            <ScrollViewer x:Name="PART_ContentHost" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="Bd" Property="BorderBrush" Value="#81A1C1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- Outer shadow border -->
    <Border CornerRadius="12" Background="#2E3440"
            Margin="10">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="4" Opacity="0.6" Color="#000000"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>  <!-- Header bar -->
                <RowDefinition Height="Auto"/>  <!-- Icon + title -->
                <RowDefinition Height="Auto"/>  <!-- Form -->
            </Grid.RowDefinitions>

            <!-- Top title bar -->
            <Border Grid.Row="0" CornerRadius="12,12,0,0" Background="#272C36" Padding="16,10">
                <Grid>
                    <TextBlock Text="Management App" FontSize="12" FontWeight="SemiBold"
                               Foreground="#88909E" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                    <Button Content="âœ•" HorizontalAlignment="Right" VerticalAlignment="Center"
                            Width="24" Height="24" FontSize="11" Foreground="#88909E"
                            Background="Transparent" BorderThickness="0" Cursor="Hand"
                            Click="Cancel_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="4">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#BF616A"/>
                                                    <Setter Property="Foreground" Value="White"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Border>

            <!-- Icon + heading -->
            <StackPanel Grid.Row="1" HorizontalAlignment="Center" Margin="0,28,0,24">
                <!-- Lock circle -->
                <Border Width="56" Height="56" CornerRadius="28"
                        Background="#3B4252" HorizontalAlignment="Center">
                    <TextBlock Text="ðŸ”’" FontSize="24"
                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
                <TextBlock Text="Welcome Back" FontSize="20" FontWeight="Bold"
                           Foreground="#ECEFF4" HorizontalAlignment="Center" Margin="0,14,0,4"/>
                <TextBlock Text="Enter your password to continue" FontSize="12"
                           Foreground="#88909E" HorizontalAlignment="Center"/>
            </StackPanel>

            <!-- Form area -->
            <StackPanel Grid.Row="2" Margin="32,0,32,32">
                <TextBlock Text="Password" FontSize="11" FontWeight="SemiBold"
                           Foreground="#88909E" Margin="2,0,0,6"/>
                <PasswordBox x:Name="AdminPasswordBox"
                             Style="{StaticResource ElegantPasswordBox}"
                             KeyDown="AdminPasswordBox_KeyDown"/>

                <!-- Error message (hidden by default) -->
                <TextBlock x:Name="ErrorText" Text="Incorrect password. Please try again."
                           Foreground="#BF616A" FontSize="11" Margin="2,6,0,0"
                           Visibility="Collapsed"/>

                <Grid Margin="0,20,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="8"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="0" Content="Cancel"
                            Style="{StaticResource LoginButtonStyle}"
                            Background="#3B4252" Foreground="#ECEFF4"
                            Click="Cancel_Click"/>
                    <Button Grid.Column="2" Content="Sign In"
                            Style="{StaticResource LoginButtonStyle}"
                            Background="#5E81AC" Foreground="White"
                            IsDefault="True" Click="OK_Click"/>
                </Grid>
            </StackPanel>
        </Grid>
    </Border>
</Window>
