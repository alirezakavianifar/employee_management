<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Nordic-inspired color palette -->
    <Color x:Key="NordicDarkBlue">#2E3440</Color>
    <Color x:Key="NordicLightGray">#ECEFF4</Color>
    <Color x:Key="NordicMediumGray">#D8DEE9</Color>
    <Color x:Key="NordicDarkGray">#3B4252</Color>
    <Color x:Key="NordicBlue">#5E81AC</Color>
    <Color x:Key="NordicLightBlue">#81A1C1</Color>
    <Color x:Key="NordicRed">#BF616A</Color>
    <Color x:Key="NordicOrange">#D08770</Color>
    <Color x:Key="NordicYellow">#EBCB8B</Color>
    <Color x:Key="NordicGreen">#A3BE8C</Color>
    <Color x:Key="NordicPurple">#B48EAD</Color>

    <!-- Solid color brushes -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource NordicDarkBlue}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource NordicLightGray}"/>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource NordicBlue}"/>
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource NordicLightGray}"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="White"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource NordicRed}"/>
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource NordicGreen}"/>
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource NordicOrange}"/>
    <SolidColorBrush x:Key="InfoBrush" Color="{StaticResource NordicLightBlue}"/>

</ResourceDictionary>
