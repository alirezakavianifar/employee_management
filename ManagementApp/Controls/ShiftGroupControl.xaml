<UserControl x:Class="ManagementApp.Controls.ShiftGroupControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ManagementApp.Controls"
             xmlns:models="clr-namespace:Shared.Models;assembly=Shared"
             xmlns:converters="clr-namespace:ManagementApp.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="250">

    <UserControl.Resources>
        <converters:EmployeePhotoConverter x:Key="EmployeePhotoConverter"/>
        <converters:ImagePathConverter x:Key="ImagePathConverter"/>
        <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </UserControl.Resources>

    <Border BorderBrush="#DDDDDD" BorderThickness="1" Margin="5" Background="White" CornerRadius="5">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Header -->
                <RowDefinition Height="*"/>    <!-- Morning -->
                <RowDefinition Height="1"/>    <!-- Divider -->
                <RowDefinition Height="*"/>    <!-- Afternoon -->
                <RowDefinition Height="1"/>    <!-- Divider -->
                <RowDefinition Height="*"/>    <!-- Night -->
            </Grid.RowDefinitions>

            <!-- Header: Group Name and Supervisor -->
            <Border Grid.Row="0" Background="{Binding Color, TargetNullValue=#4CAF50, FallbackValue=#4CAF50}" 
                    Padding="10" CornerRadius="5,5,0,0"
                    AllowDrop="True" Drop="Header_Drop">
                <StackPanel>
                    <TextBlock Text="{Binding Name}" 
                               Foreground="White" FontWeight="Bold" 
                               HorizontalAlignment="Center" FontSize="14"/>
                    <StackPanel HorizontalAlignment="Center" Margin="0,4,0,0"
                                Visibility="{Binding SupervisorName, Converter={StaticResource StringToVisibilityConverter}}">
                        <Image Width="40" Height="40" Stretch="UniformToFill"
                               Source="{Binding SupervisorPhotoPath, Converter={StaticResource ImagePathConverter}}"
                               Margin="0,0,0,2"/>
                        <TextBlock Text="{Binding SupervisorName, StringFormat='Supervisor: {0}', TargetNullValue={converters:Res supervisor_not_assigned}}"
                                   Foreground="#E0E0E0" FontSize="11"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                    <TextBlock Text="{converters:Res hint_drag_drop_supervisor}"
                               Foreground="#AAAAAA" FontSize="9"
                               HorizontalAlignment="Center" Margin="0,2,0,0"
                               Visibility="{Binding SupervisorName, Converter={StaticResource StringToVisibilityConverter}, ConverterParameter=Inverse}"/>
                </StackPanel>
            </Border>

            <!-- Morning Shift -->
            <local:ShiftSlotControl Grid.Row="1" 
                                  ShiftData="{Binding MorningShift}"
                                  ShiftType="morning"
                                  ShiftTitle="Morning Shift"
                                  ShiftColor="#4CAF50"
                                  OnItemDropped="ShiftSlot_ItemDropped"
                                  OnRemoveLabelRequested="ShiftSlot_RemoveLabelRequested"/>

            <Border Grid.Row="2" Background="#EEEEEE"/>

            <!-- Afternoon Shift -->
            <local:ShiftSlotControl Grid.Row="3" 
                                  ShiftData="{Binding AfternoonShift}"
                                  ShiftType="afternoon"
                                  ShiftTitle="Afternoon Shift"
                                  ShiftColor="#FF9800"
                                  OnItemDropped="ShiftSlot_ItemDropped"
                                  OnRemoveLabelRequested="ShiftSlot_RemoveLabelRequested"/>

            <Border Grid.Row="4" Background="#EEEEEE"/>

            <!-- Night Shift -->
            <local:ShiftSlotControl Grid.Row="5" 
                                  ShiftData="{Binding NightShift}"
                                  ShiftType="night"
                                  ShiftTitle="Night Shift"
                                  ShiftColor="#3F51B5"
                                  OnItemDropped="ShiftSlot_ItemDropped"
                                  OnRemoveLabelRequested="ShiftSlot_RemoveLabelRequested"/>
        </Grid>
    </Border>
</UserControl>
