<UserControl x:Class="ManagementApp.Controls.ShiftGroupControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ManagementApp.Controls"
             xmlns:models="clr-namespace:Shared.Models;assembly=Shared"
             xmlns:converters="clr-namespace:ManagementApp.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="250">

    <UserControl.Resources>
        <converters:EmployeePhotoConverter x:Key="EmployeePhotoConverter"/>
        <converters:ImagePathConverter x:Key="ImagePathConverter"/>
        <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
        <converters:ShiftToSlotListConverter x:Key="ShiftToSlotListConverter"/>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </UserControl.Resources>

    <Border BorderBrush="#DDDDDD" BorderThickness="1" Margin="5" Background="White" CornerRadius="5">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Header -->
                <RowDefinition Height="*"/>    <!-- Morning -->
                <RowDefinition Height="1"/>    <!-- Divider -->
                <RowDefinition Height="*"/>    <!-- Afternoon -->
                <RowDefinition Height="1"/>    <!-- Divider -->
                <RowDefinition Height="*"/>    <!-- Night -->
            </Grid.RowDefinitions>

            <!-- Header: Group Name and Supervisor -->
            <Border Grid.Row="0" Background="{Binding Color, TargetNullValue=#4CAF50, FallbackValue=#4CAF50}" 
                    Padding="10" CornerRadius="5,5,0,0"
                    AllowDrop="True" Drop="Header_Drop">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="{Binding Name}" 
                                   Foreground="White" FontWeight="Bold" 
                                   HorizontalAlignment="Center" FontSize="14"/>
                        <StackPanel HorizontalAlignment="Center" Margin="0,4,0,0"
                                    Visibility="{Binding SupervisorName, Converter={StaticResource StringToVisibilityConverter}}">
                            <Image Width="40" Height="40" Stretch="UniformToFill"
                                   Source="{Binding SupervisorPhotoPath, Converter={StaticResource ImagePathConverter}}"
                                   Margin="0,0,0,2"/>
                            <TextBlock Text="{Binding SupervisorName, StringFormat='Supervisor: {0}', TargetNullValue={converters:Res supervisor_not_assigned}}"
                                       Foreground="#E0E0E0" FontSize="11"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock Text="{converters:Res hint_drag_drop_supervisor}"
                                   Foreground="#AAAAAA" FontSize="9"
                                   HorizontalAlignment="Center" Margin="0,2,0,0"
                                   Visibility="{Binding SupervisorName, Converter={StaticResource StringToVisibilityConverter}, ConverterParameter=Inverse}"/>
                    </StackPanel>

                    <!-- Edit Button -->
                    <Button Grid.Column="1" VerticalAlignment="Top" HorizontalAlignment="Right"
                            Width="24" Height="24" Background="Transparent" BorderThickness="0"
                            Click="EditGroup_Click" Cursor="Hand" ToolTip="Edit Group">
                        <Path Data="M3,17.25V21H6.75L17.81,9.94L14.06,6.19L3,17.25M20.71,7.04C21.1,6.65 21.1,6 20.71,5.63L18.37,3.29C18,2.9 17.35,2.9 16.96,3.29L15.13,5.12L18.88,8.87L20.71,7.04Z" 
                              Fill="White" Stretch="Uniform" Margin="4"/>
                    </Button>
                </Grid>
            </Border>

            <!-- Morning Shift -->
            <!-- Morning Shift -->
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="Morning Shift" Foreground="#4CAF50" FontSize="10" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                <ItemsControl Grid.Row="1" ItemsSource="{Binding MorningShift, Converter={StaticResource ShiftToSlotListConverter}}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <local:ShiftSlotControl ShiftData="{Binding Shift}"
                                                  SlotIndex="{Binding Index}"
                                                  ShiftType="morning"
                                                  ShiftColor="#4CAF50"
                                                  OnItemDropped="ShiftSlot_ItemDropped"
                                                  OnRemoveLabelRequested="ShiftSlot_RemoveLabelRequested"
                                                  Margin="2"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>

            <Border Grid.Row="2" Background="#EEEEEE"/>

            <!-- Afternoon Shift -->
            <!-- Afternoon Shift -->
            <Grid Grid.Row="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="Afternoon Shift" Foreground="#FF9800" FontSize="10" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                <ItemsControl Grid.Row="1" ItemsSource="{Binding AfternoonShift, Converter={StaticResource ShiftToSlotListConverter}}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <local:ShiftSlotControl ShiftData="{Binding Shift}"
                                                  SlotIndex="{Binding Index}"
                                                  ShiftType="afternoon"
                                                  ShiftColor="#FF9800"
                                                  OnItemDropped="ShiftSlot_ItemDropped"
                                                  OnRemoveLabelRequested="ShiftSlot_RemoveLabelRequested"
                                                  Margin="2"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>

            <Border Grid.Row="4" Background="#EEEEEE"/>

            <!-- Night Shift -->
            <!-- Night Shift -->
            <Grid Grid.Row="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="Night Shift" Foreground="#3F51B5" FontSize="10" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                <ItemsControl Grid.Row="1" ItemsSource="{Binding NightShift, Converter={StaticResource ShiftToSlotListConverter}}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <local:ShiftSlotControl ShiftData="{Binding Shift}"
                                                  SlotIndex="{Binding Index}"
                                                  ShiftType="night"
                                                  ShiftColor="#3F51B5"
                                                  OnItemDropped="ShiftSlot_ItemDropped"
                                                  OnRemoveLabelRequested="ShiftSlot_RemoveLabelRequested"
                                                  Margin="2"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </Grid>
    </Border>
</UserControl>
